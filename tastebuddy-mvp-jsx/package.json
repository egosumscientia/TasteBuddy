{
  "name": "tastebuddy-mvp-jsx",
  "version": "1.0.0",
  "private": true,
  "description": "TasteBuddy â€“ Asistente de sabor (MVP offline, Expo, JSX)",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "expo": "^54.0.30",
    "expo-status-bar": "~2.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
